@using Vin.Web.Models.AuthModels;
@model LoginRequestDTO
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="Username..." />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Login</button>
            </div>
        </div>


        <div class="row text-center mt-3">
            <div class="col-6 offset-3">
                <a asp-action="ForgotPassword" asp-controller="Auth" class="text-primary">Forgot Password ?</a>
            </div>
            <div class="col-6 offset-3">
                <a asp-action="ResetPassword" asp-controller="Auth" class="text-primary">Reset Password</a>
            </div>
            <div class="col-6 offset-3">

                <p>

                    Don&prime;t have an account ? <span>
                        <a asp-action="Register" asp-controller="Auth" class="text-primary">Sign Up</a>
                </span>  </p>
                    
              

            </div>
        </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</form>

